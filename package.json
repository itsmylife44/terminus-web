{
  "name": "terminus-web",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "description": "Terminal emulator web app with WebSocket PTY server",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build": "turbo run build",
    "start": "pm2 start ecosystem.config.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/proper-lockfile": "^4.1.4",
    "eslint": "^9.39.0",
    "globals": "^16.1.0",
    "prettier": "^3.5.0",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "proper-lockfile": "^4.1.2"
  }
}
